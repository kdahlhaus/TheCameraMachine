// STL headers
#include <vector>
#include <string>
#include <iostream>
// C headers
// Framework headers
// Library headers
#include <Updater.h>
#include <cxxtest/TestSuite.h>
// Project headers
// This component's header
#include <Sequence.h>

using namespace std;
extern "C" void mock_time_reset(void);

class SequenceTestSuite: public CxxTest::TestSuite
{
  Sequence* pSequence ;
  Updater* pUpdater;
public:
  void setUp()
  {
    mock_time_reset();
    pSequence = new Sequence();
    pUpdater = new Updater();
    pSequence->begin(*pUpdater);
  }
  
  void tearDown()
  {
    delete pSequence;
  }

  void testEmpty( void )
  {
    TS_ASSERT(pSequence);
  }
  void testNotFired( void )
  {
    delay(20000);
    TS_ASSERT_EQUALS(pSequence->wasFired(),false);
  }
};
