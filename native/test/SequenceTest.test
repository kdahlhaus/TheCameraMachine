// STL headers
#include <vector>
#include <string>
#include <iostream>
// C headers
// Framework headers
// Library headers
#include <Updater.h>
#include <cxxtest/TestSuite.h>
// Project headers
// This component's header
#include <Sequence.h>

using namespace std;
extern "C" void mock_time_reset(void);

/**
 * Static sequence statics
 */

namespace ss
{
  Sequence::Entry entries[] = {
    { 0L, 1 },
    { 1000L, 2 },
    { 1000L, 3 },
    { 0L, 4 },
    { 0L, 0 },
  };

} //namespace ss

class SequenceTestSuite: public CxxTest::TestSuite
{
  Sequence* pSequenceEmpty;
  Sequence* pSequenceStatic;
  Updater* pUpdater;
public:
  void setUp()
  {
    mock_time_reset();
    pSequenceEmpty = new Sequence();
    pSequenceStatic = new Sequence(ss::entries);
    pUpdater = new Updater();
    pSequenceEmpty->begin(*pUpdater);
    pSequenceStatic->begin(*pUpdater);
  }
  
  void tearDown()
  {
    delete pUpdater;
    delete pSequenceStatic;
    delete pSequenceEmpty;
  }

  void testEmpty( void )
  {
    TS_ASSERT(pSequenceEmpty);
  }
  void testNotFired( void )
  {
    delay(20000);
    TS_ASSERT_EQUALS(pSequenceEmpty->wasFired(),false);
  }
};
