#include <vector>
#include <string>

// C includes

// Library includes
#include <cxxtest/TestSuite.h>
#include <RtcEvent.h> // for IRtc
#include <Updater.h>

// Project includes
#include <RtcSetter.h>
#include <Globals.h>
#include <TestRtc.h>

#include <Arduino.h>
#include <RTClib.h>

using namespace std;

class RtcSetterTestSuite: public CxxTest::TestSuite
{
  Updater* pup;
  TestRtc* prtc;
  RtcSetter* psetter;

public:
  void setUp()
  {
    pup = new Updater;
    prtc = new TestRtc;
    psetter = new RtcSetter(prtc);

    psetter->begin();
    pup->add(psetter);
  }

  void tearDown()
  {
    delete psetter;
    delete prtc;
    delete pup;
  }

  void testEmpty( void )
  {
    TS_ASSERT(psetter);
  }
  
  void testSetViaUpdater( void )
  {
    theSerialBuffer.setInput("TNov 01 2011 01:02:03\n");
    pup->update();
    TS_ASSERT_EQUALS( prtc->now, DateTime("Nov 01 2011","01:02:03").unixtime() );
  }
};
